// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  firstName     String?
  lastName      String?
  name          String?   // Full name (for Google OAuth)
  password      String?  // Hashed password (nullable for OAuth users)
  image         String?  // Profile image URL
  role          String    @default("USER") // USER, ADMIN, SUPER_ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // Relations
  accounts      Account[]
  sessions      Session[]
  verificationTokens VerificationToken[]
  passwordResetTokens PasswordResetToken[]
  signinVerificationCodes SigninVerificationCode[]
  purchases     Purchase[]
  uploadedBooks Book[]     // Books uploaded by this user
  wishlist      Wishlist[] // Books in user's wishlist
  cartItems     Cart[]     // Items in user's shopping cart
  bookmarks     Bookmark[] // Reading bookmarks and positions
  highlights    Highlight[] // Text highlights in books

  @@map("users")
}

// OAuth/Third-party account providers (Google only)
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String  // oauth
  provider          String  @default("google") // Only Google
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId], name: "provider_providerAccountId")
  @@map("accounts")
}

// User sessions for managing active logins
model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Email verification tokens
model VerificationToken {
  id         String   @id @default(uuid())
  identifier String   // Email address
  token      String   @unique
  expires    DateTime
  userId     String?
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Password reset tokens
model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

// Signin verification codes
model SigninVerificationCode {
  id        String   @id @default(uuid())
  code      String   // 6-digit verification code
  userId    String
  email     String
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([code, email])
  @@index([userId])
  @@map("signin_verification_codes")
}

// Contact form submissions
model ContactSubmission {
  id        String   @id @default(uuid())
  name      String
  email     String
  bookTitle String
  message   String   @db.Text
  status    String   @default("PENDING") // PENDING, REVIEWED, APPROVED, REJECTED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_submissions")
}

// Book model
model Book {
  id               String     @id @default(uuid())
  title            String
  author           String
  description      String?    @db.Text
  shortDescription String?    @db.Text
  price            Decimal    @default(0) @db.Decimal(10, 2)
  coverImageUrl    String?    // S3 URL for cover image
  bookFileUrl      String     // S3 URL for EPUB file
  category         String?
  rating           Float?     @default(0)
  downloads        Int        @default(0)
  recommended      Boolean    @default(false)
  isActive         Boolean    @default(true) // For soft delete
  userId           String?    // ID of user who uploaded the book (nullable for existing books)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  // Relations
  purchases        Purchase[]
  uploadedBy       User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  wishlistItems    Wishlist[] // Users who have this book in their wishlist
  cartItems        Cart[]     // Users who have this book in their cart
  bookmarks        Bookmark[] // User bookmarks for this book
  highlights       Highlight[] // User highlights for this book
  chapters         Chapter[]  // Chapters extracted from EPUB

  @@index([category])
  @@index([recommended])
  @@index([isActive])
  @@index([userId])
  @@map("books")
}

// Purchase model - tracks user book purchases
model Purchase {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  price     Decimal  @db.Decimal(10, 2) // Price at time of purchase
  status    String   @default("COMPLETED") // COMPLETED, PENDING, FAILED, REFUNDED
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId]) // Prevent duplicate purchases
  @@index([userId])
  @@index([bookId])
  @@map("purchases")
}

// Wishlist model - tracks books users want to save for later
model Wishlist {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId]) // Prevent duplicate wishlist entries
  @@index([userId])
  @@index([bookId])
  @@map("wishlist")
}

// Cart model - tracks books users want to purchase
model Cart {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  price     Decimal  @db.Decimal(10, 2) // Book price at time of adding to cart (snapshot)
  quantity  Int      @default(1) // Quantity (default 1, can be increased)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId]) // Prevent duplicate cart entries (update quantity instead)
  @@index([userId])
  @@index([bookId])
  @@map("cart")
}

// Bookmark model - tracks reading positions and selected text in e-books
model Bookmark {
  id            String   @id @default(uuid())
  userId       String
  bookId       String
  pageNumber   Int?     // Page number where bookmark was created (optional, varies by device)
  chapter      String?  // Chapter or section name (optional)
  selectedText String?  @db.Text // The text/paragraph that was selected
  cfi          String?  @db.Text // Canonical Fragment Identifier (EPUB standard position reference)
  position     Float?   // Numeric position/offset in the book (0.0 to 1.0 or specific offset)
  note         String?  @db.Text // Optional user note about this bookmark
  isLastPosition Boolean @default(false) // Mark as last reading position (only one per book per user)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book         Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bookId])
  @@index([userId, bookId])
  @@index([isLastPosition])
  @@map("bookmarks")
}

// Chapter model - stores chapters extracted from EPUB for table of contents
model Chapter {
  id          String   @id @default(uuid())
  bookId      String
  title       String   // Chapter title/name
  order       Int      // Chapter order/number (1, 2, 3...)
  href        String?  // EPUB href reference for navigation
  cfi         String?  @db.Text // Canonical Fragment Identifier for precise navigation
  position    Float?   // Position in book (0.0 to 1.0) - optional
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([bookId])
  @@index([bookId, order])
  @@map("chapters")
}

// Highlight model - tracks text highlights with colors in e-books
model Highlight {
  id            String   @id @default(uuid())
  userId        String
  bookId        String
  selectedText  String   @db.Text // The text that was highlighted
  color         String   @default("yellow") // Highlight color: yellow, green, blue, pink, orange, purple
  pageNumber    Int?     // Page number where highlight was created (optional, varies by device)
  chapter       String?  // Chapter or section name (optional)
  cfi           String?  @db.Text // Canonical Fragment Identifier (EPUB standard position reference)
  position      Float?   // Numeric position/offset in the book (0.0 to 1.0)
  note          String?  @db.Text // Optional user note about this highlight
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book          Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bookId])
  @@index([userId, bookId])
  @@index([color])
  @@map("highlights")
}